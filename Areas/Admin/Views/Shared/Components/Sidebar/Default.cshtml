@model List<Client.Areas.Admin.Models.SidebarNavItem>
@functions {
	public string kiemTra(Client.Areas.Admin.Models.SidebarNavItem item)
	{
		if (item.Area is not null && item.Controller is not null && item.Action is not null)
		{
			if (item.Area.ToLower() == Context.GetRouteValue("area").ToString().ToLower() && item.Controller.ToLower() == Context.GetRouteValue("controller").ToString().ToLower() && item.Action.ToLower() == Context.GetRouteValue("action").ToString().ToLower()
			)
				return "active";
		}
		return string.Empty;
	}

	public string taoLink(Client.Areas.Admin.Models.SidebarNavItem item)
	{
		if (item.UseUrl)
			return item.Url ?? "#";
		if (item.UseAAC)
			return $"{item.Area}/{item.Controller}/{item.Action}";
		return "#";
	}

}
@{
	Action<Client.Areas.Admin.Models.SidebarNavItem> html = null;
	Action<Client.Areas.Admin.Models.SidebarNavItem> htmlHoa = (Client.Areas.Admin.Models.SidebarNavItem item) =>
	{
		<li class='nav-item'>
			<a href="@taoLink(item)" class="nav-link @kiemTra(item)">
				<i class="nav-icon @item.Icon"></i>
				<p>
					@item.Name
					@if (item.Childs.Any())
					{
						<i class="right fas fa-angle-left"></i>
					}
				</p>
			</a>

			@if (item.Childs.Any())
			{
				<ul class="nav nav-treeview">
					@foreach (var _item in item.Childs)
					{
						html(_item);
					}
				</ul>
			}

		</li>
	};
	html = htmlHoa;
}


