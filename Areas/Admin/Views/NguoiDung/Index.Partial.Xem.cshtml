@inject IOptions<Client.ThietLap.MayChuApi> MayChuApi
@{
	String id = ViewData["modal-xem-id"]?.ToString() ?? throw new NullReferenceException();
}
<!-- Begin Index.Partial.Xem-->
<div class="modal fade" id="@id" tabindex="-1" role="dialog" aria-labelledby="@(id)--label" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="@(id)-label">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<form id="@(id)--form">
				<div class="modal-body">
					<div class="form-group">
						<label for="@(id)--hoVaTen">Họ và tên</label>
						<input type="text" name="soYeuLyLich.hoVaTen" class="form-control" id="@(id)--hoVaTen" disabled>
					</div>

					<div class="form-group">
						<label for="@(id)--sinhNgay">Ngày sinh</label>
						<input type="date" name="soYeuLyLich.sinhNgay" class="form-control" id="@(id)--sinhNgay" disabled>
					</div>

					<div class="form-group">
						<label for="@(id)--email">Email</label>
						<input type="text" name="soYeuLyLich.email" class="form-control" id="@(id)--email" disabled>
					</div>

					<div class="form-group">
						<label for="@(id)--soDienThoai">Số điện thoại</label>
						<input type="text" name="soYeuLyLich.email" class="form-control" id="@(id)--soDienThoai" disabled>
					</div>

					<div id="@(id)--hocVien" class="phu-them">
						<div class="form-group">
							<label for="@(id)--truong">Trường</label>
							<input type="text" name="truong" class="form-control" id="@(id)--truong" disabled>
						</div>

						<div class="form-group">
							<label for="@(id)--phuHuynh">Phụ huynh</label>
							<input type="text" name="phuHuynh" class="form-control" id="@(id)--phuHuynh" disabled>
						</div>
					</div>

					<div id="@(id)--quanTri" class="phu-them">
					</div>

					<div id="@(id)--giangVien" class="phu-them">
						<div class="form-group">
							<label for="@(id)--trinhDo">Trình độ</label>
							<input type="text" name="trinhDo" id="@(id)--trinhDo" class="form-control" disabled>
						</div>

						<div class="form-group">
							<label for="@(id)--donViCongTac">Đơn vị công tác</label>
							<input type="text" name="donViCongTac" id="@(id)--donViCongTac" class="form-control" disabled>
						</div>
					</div>

				</div>
			</form>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<button type="button" id="@(id)--submit" class="btn btn-primary">Save changes</button>
			</div>
		</div>
	</div>
</div>

<script>
	window.addEventListener('load', function () {
		let dom = document.getElementById('@id');
		dom.data = {
			hoVaTen: document.getElementById('@(id)--hoVaTen'),
			email: document.getElementById('@(id)--email'),
			dienThoai: document.getElementById('@(id)--soDienThoai'),
			sinhNgay: document.getElementById('@(id)--sinhNgay'),
			donViCongTac: document.getElementById('@(id)--donViCongTac'),
			trinhDo: document.getElementById('@(id)--trinhDo'),
			phuHuynh: document.getElementById('@(id)--phuHuynh'),
			truong: document.getElementById('@(id)--truong')
		};

		let kichHoat = function (id) {
			dom.querySelectorAll('.phu-them').forEach((obj, index) => {
				obj.classList.add('d-none');
			});

			document.getElementById(id).classList.remove('d-none');
		}

		let cacheDetails = {};

		dom.nap = async function (id) {
			let datas = $('#@ViewData["bang-id"]').DataTable().data();
			data = datas.filter(x => x.id == id)[0];
			this.data.hoVaTen.value = data.soYeuLyLich.hoVaTen;
			this.data.email.value = data.soYeuLyLich.email;
			this.data.dienThoai.value = data.soYeuLyLich.dienThoai;
			this.data.sinhNgay.value = data.soYeuLyLich.sinhNgay.substring(0, 10);

			if (cacheDetails[data.id] == null && data.phanLoai != 'QuanTri'
				||
				(
					globalThis.flags != null &&
					globalThis.flags.includes(data.id)
				)
			) {
				cacheDetails[data.id] = await fetch(`@(MayChuApi.Value.DiaChi)/api/${data.phanLoai}/chitiet?id=${data.id}`, {})
					.then(res => res.json());
				if (globalThis.flags != null)
					globalThis.flags.pop(data.id);
			}

			switch (data.phanLoai) {
				case 'QuanTri':
					break;
				case 'GiangVien':
					this.data.trinhDo.value = cacheDetails[data.id].trinhDo;
					this.data.donViCongTac.value = cacheDetails[data.id].donViCongTac;
					break;
				case 'HocVien':
					this.data.truong.value = cacheDetails[data.id].truong;
					this.data.phuHuynh.value = cacheDetails[data.id].phuHuynh;
					break;
			}
			let tenDoiTuong = data.phanLoai.charAt(0).toLowerCase() + data.phanLoai.slice(1);
			kichHoat(`@(id)--${tenDoiTuong}`);
		}
		this['obj-@id'] = dom;
	});
</script>
<!-- End Index.Partial.Xem-->